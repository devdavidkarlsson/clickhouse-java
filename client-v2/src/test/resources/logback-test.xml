<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Enable debug for streaming consumer -->
    <logger name="com.clickhouse.client.api.internal.StreamingAsyncResponseConsumer" level="DEBUG"/>
    <logger name="com.clickhouse.client.api.internal.HttpAPIClientHelper" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
